  getter value : Int32
  getter suit : Int32

  def initialize(@value, @suit)
  end

  def self.draw(game : Game, card : Card)
    return Card::FACES[card.value][card.suit] if game.face_type == 1
       
    Card::FACES2[card.value][card.suit]
  end

  def is_ace?
    value == 0
  end

  def is_ten?
    value > 8
  end
